{
  "openapi": "3.0.0",
  "info": {
    "title": "Products API",
    "description": "Manage products and reviews",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/api"
    }
  ],
  "paths": {
    "/products": {
      "get": {
        "parameters": [
          {
            "in": "query",
            "name": "sort",
            "schema": {
              "type": "string",
              "enum": ["date", "price", "rating"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Product"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/products/{product_id}": {
      "get": {},
      "put": {},
      "delete": {}
    }
  },
  "components": {
    "schemas": {
      "Product": {
        "properties": {
          "id": {
            "type": "integer",
            "example": 1,
            "readOnly": true
          },
          "name": {
            "type": "string",
            "example": "Laptop"
          },
          "description": {
            "type": "string",
            "example": "Surf the web and code all on the same machine!"
          },
          "price": {
            "type": "number",
            "example": 399.99
          },
          "stock": {
            "type": "integer",
            "example": 50
          },
          "rating": {
            "type": "number",
            "example": 4.5,
            "readOnly": true
          },
          "product_date": {
            "type": "string",
            "example": "2020-01-01",
            "readOnly": true
          }
        }
      }
    }
  }
}
